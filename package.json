{
  "name": "gamedev-mcp-hub",
  "version": "0.1.0",
  "description": "A comprehensive MCP server hub for game development tools and engines",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "gamedev-mcp-hub": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && node scripts/post-build.js",
    "build:watch": "tsc --watch",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "test:e2e": "vitest run --dir tests/e2e",
    "test:watch": "vitest watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json}\"",
    "prepare": "husky install",
    "clean": "rimraf dist"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "game-development",
    "unity",
    "godot",
    "unreal",
    "blender",
    "ai-tools",
    "claude",
    "automation"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/gamedev-mcp-hub.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/gamedev-mcp-hub/issues"
  },
  "homepage": "https://github.com/yourusername/gamedev-mcp-hub#readme",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "zod": "^3.23.8",
    "winston": "^3.15.0",
    "dotenv": "^16.4.5",
    "node-fetch": "^3.3.2",
    "ws": "^8.18.0",
    "express": "^4.21.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/node": "^20.17.6",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "tsx": "^4.19.2",
    "vitest": "^1.6.0",
    "rimraf": "^5.0.10",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@8.15.0"
}
